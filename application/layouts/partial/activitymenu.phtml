function getRowSet($name, $id)
{
    $tableName = "";
    $tableMapper = new Iati_WEP_TableClassMapper();
    $tableName = $tableMapper->getTableName(
                    $tableMapper->convertUnderscoreToCamelCase($name)
                );
    $wepModel = new Model_Wep();
    $rowSet = $wepModel->getRowsByFields($tableName, 'activity_id', $id);
//    print_r($rowSet);exit;
    if($rowSet)
        $rowSet = true;
    return $rowSet;
}
